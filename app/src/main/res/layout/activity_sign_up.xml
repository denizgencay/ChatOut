<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arsi.dev.chatout.SignUp"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

       <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/textLeft"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.79" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toTopOf="@+id/imageBottomSecond"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guideline11"
        app:layout_constraintTop_toTopOf="@+id/imageTopSecond"
        app:srcCompat="@drawable/kutu" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:onClick="selectImage"
        android:src="@drawable/circle_pen"
        app:civ_border_color="@color/dark"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@+id/imageRight"
        app:layout_constraintStart_toStartOf="@id/imageLeft"
        app:layout_constraintBottom_toBottomOf="@id/imageBottom"
        app:layout_constraintTop_toTopOf="@+id/imageTop" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageTopSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageBottomSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />


    <EditText
        android:id="@+id/userNameText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#BF0505"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:padding="10dp"
        android:textColorHint="#BF0505"
        app:layout_constraintEnd_toStartOf="@+id/textRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/asd" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/okTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/okBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />


    <EditText
        android:id="@+id/eMailText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#BF0505"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#BF0505"
        app:layout_constraintEnd_toStartOf="@+id/textRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#BF0505"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:password="true"
        android:textColorHint="#BF0505"
        app:layout_constraintEnd_toStartOf="@+id/textRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/passwordAgainText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:backgroundTint="#BF0505"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:password="true"
        android:textColorHint="#BF0505"
        app:layout_constraintEnd_toStartOf="@+id/textRight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <ImageView
        android:id="@+id/sign_up_button"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@id/okTop"
        app:layout_constraintBottom_toTopOf="@id/okBottom"
        app:layout_constraintEnd_toStartOf="@+id/imageRight"
        app:layout_constraintStart_toStartOf="@+id/imageLeft"
        app:srcCompat="@drawable/ok"
        tools:layout_editor_absoluteY="557dp" />

    <TextView
        android:id="@+id/asd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kullanıcı Adı"
        android:textColor="#BF0505"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonLeft"
        app:layout_constraintStart_toStartOf="@+id/textLeft"
        app:layout_constraintTop_toTopOf="@+id/imageBottom" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="E-Posta"
        android:textColor="#BF0505"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonLeft"
        app:layout_constraintStart_toStartOf="@+id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/userNameText" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Şifre"
        android:textColor="#BF0505"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonLeft"
        app:layout_constraintStart_toStartOf="@+id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/eMailText" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tekrar Şifre"
        android:textColor="#BF0505"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonLeft"
        app:layout_constraintStart_toStartOf="@+id/textLeft"
        app:layout_constraintTop_toBottomOf="@+id/passwordText" />

</androidx.constraintlayout.widget.ConstraintLayout>